{
  "browser": {
        "browserName": "chromium",
    "isolated": true,
    "launchOptions": {
      "headless": false,
      "args": [
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor",
        "--no-sandbox"
      ]
    },
    "contextOptions": {
      "viewport": { 
        "width": 1280, 
        "height": 720 
      }
    }
  },

  "capabilities": [
    "core",
    "tabs", 
    "pdf",
    "history",
    "wait",
    "files",
    "install",
    "testing"
  ],
  "vision": false,
  "outputDir": "./playwright-output",

  "noImageResponses": false
} 
# FlareSolverr Configuration (Required for CheckScam crawling)
FLARESOLVERR_URL=http://localhost:8191/v1
FLARESOLVERR_TIMEOUT=60000  # 60 seconds

# CheckScam Crawler Configuration
CHECKSCAM_BASE_URL=https://checkscam.vn
CRAWLER_DELAY_MS=5000       # Delay between requests (5 seconds)
CRAWLER_MAX_RETRIES=3       # Max retry attempts per request
CRAWLER_TIMEOUT_MS=60000    # Request timeout (60 seconds)

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Strapi Configuration
STRAPI_URL=http://localhost:1337
STRAPI_TOKEN=your_api_token_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=30  # Max requests per window

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Crawler Configuration (Legacy)
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
REQUEST_TIMEOUT_MS=30000  # 30 seconds

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_DELAY_MS=5000

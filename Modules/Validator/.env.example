# Redis Stream Validator Environment Configuration
# Copy this file to .env and update values for your environment

# PostgreSQL Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=validator

# Redis Configuration (optional overrides)
REDIS_URL=redis://localhost:6379
REDIS_STREAM=validation_requests

# Consumer Configuration
CONSUMER_GROUP=validator_workers
CONSUMER_NAME=worker_1

# Processing Configuration
BATCH_SIZE=10
BLOCK_TIME=1000
MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO

# Production PostgreSQL DSN (if using external database)
# Database name should be 'validator' for this project
# POSTGRES_DSN=postgresql://JOY:J8p!x2wqZs7vQ4rL@DB:5432/validator

# Example for local development:
# POSTGRES_DSN=postgresql://username:password@localhost:5432/validator

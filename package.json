{
  "name": "rate-box",
  "version": "2.0.0",
  "private": true,
  "author": {
    "name": "JOY",
    "email": "joy@rate.box",
    "url": "https://rate.box"
  },
  "maintainers": [
    {
      "name": "JOY",
      "email": "joy@rate.box",
      "url": "https://rate.box"
    }
  ],
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build --cache-dir=.turbo",
    "build:strapi": "turbo run build --filter=@repo/strapi",
    "build:ui": "turbo run build --filter=@repo/ui",
    "commit": "git-cz",
    "dev": "turbo dev",
    "dev:strapi": "turbo run dev --filter=@repo/strapi",
    "dev:ui": "turbo run dev --filter=@repo/ui",
    "format": "prettier --write --cache --ignore-unknown \"**/*.{js,jsx,ts,tsx,md,css,scss}\"",
    "format:check": "prettier --check --cache --ignore-unknown \"**/*.{js,jsx,ts,tsx,md,css,scss}\"",
    "heroku-postbuild": "bash ./scripts/heroku/heroku-postbuild.sh",
    "preinstall": "npx only-allow yarn",
    "lint": "turbo lint",
    "prepare": "husky",
    "start:strapi": "turbo run start --filter=@repo/strapi",
    "start:ui": "turbo run start --filter=@repo/ui",
    "setup:apps": "find . -name '*.example' -exec sh -c 'cp \"$1\" \"${1%.example}\"' _ {} \\;",
    "type-check": "turbo type-check",
    "auto-test": "pwsh -File .\\Test\\auto-test-build-workflow.ps1",
    "test-plugin": "npx playwright test Test/auto-test-smart-component-filter.spec.js --headed"
  },
  "prettier": "@repo/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@playwright/test": "^1.52.0",
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/typescript-config": "*",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.1",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "turbo": "^2.0.9"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": "22.x.x",
    "yarn": "1.22.x"
  },
  "comments": {
    "prettier": "bump to 3.3.3 destroys types schemas generated by Strapi (@strapi/typescript-utils > generators > utils > prettier.format())"
  },
  "dependencies": {
    "@next/eslint-plugin-next": "15.3.3",
    "@strapi/plugin-color-picker": "5.17.0-beta.0",

    "@strapi/plugin-sentry": "5.17.0-beta.0",
    "@strapi/plugin-seo": "2.0.8",
    "@strapi/plugin-users-permissions": "5.17.0-beta.0",
    "@strapi/provider-email-mailgun": "5.17.0-beta.0",
    "@strapi/provider-upload-aws-s3": "5.17.0-beta.0",
    "@strapi/strapi": "5.17.0-beta.0",
    "@t3-oss/env-nextjs": "0.13.6",
    "@typescript-eslint/eslint-plugin": "8.33.1",
    "@typescript-eslint/parser": "8.33.1",
    "axios": "^1.9.0",
    "eslint-config-prettier": "10.1.5",
    "lucide-react": "0.513.0",
    "playwright": "^1.52.0",
    "strapi-plugin-config-sync": "3.1.1",
    "zod": "^3.25.56"
  }
}
